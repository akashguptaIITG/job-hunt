<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head.ejs'); %>
  </head>
  <body>
    <div class="container job-list">
      <div class="row row-cols-1 row-cols-md-2">
        <% jobs.forEach(job=>{ %>
        <div class="col mb-4">
          <div
            class="card h-100 "
           
            >
            <div class="card-header font-weight-bold">
              <%= job.projectName %>
            </div>
            <div class="card-body">
              <p class="card-tile"><%= job.role %></p>
            </div>
            <div class="card-footer d-flex flex-row">
              <div class="col-md-8">
                <small class="text-muted align-self-start">
                  <% job.technologies.forEach(technology=>{ %>
                    <i class="fas fa-cog technology"><%= technology %></i>
                    <% }) %>
                  </small>
                </div>
                <div class="col-md-4">
                  <i class="fas fa-eye job-btn  align-self-end" onclick="return handleClick(event);"
                  id=<%= job._id %>
                  > View Details</i>
                </div>
            </div>
          </div>
        </div>
        <% }) %>
      </div>
    </div>
  </body>
  <script>
    function handleClick(e) {
      const jobId = e.target.id;
      // console.log(jobId,e.target);
      document.location.replace(`/job/${jobId}`);
      return false;
    }
  </script>
</html>
