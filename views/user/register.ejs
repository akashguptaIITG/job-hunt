<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("../partials/head.ejs") %>
  </head>
  <body style="background: rgba(128, 128, 128, 0.726)">
    <div class="container card register">
      <h4 class="text-center font-weight-bold">Register</h4>
      <form
        class="registerForm"
        id="registerForm"
        name="registerForm"
        onsubmit="return handleSubmit(event);"
        autocomplete="off"
      >
        <div class="form-group">
          <label for="username">Username</label>
          <input
            type="text"
            class="form-control"
            id="username"
            name="username"
            required
          />
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input
            type="password"
            class="form-control"
            id="password"
            name="password"
            required
          />
        </div>
        <div class="form-group">
          <label for="role">Role</label>
          <select name="role" id="role" class="custom-select">
            <option selected value="Employee">Employee</option>
            <option value="Project Manager">Project Manager</option>
          </select>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
        <a href="/user/login">click here to login</a>

      </form>
    </div>
  </body>
  <script type="text/javascript">
    async function handleSubmit(event) {
      const form = document.querySelector("form");
      const data = Object.fromEntries(new FormData(form).entries());
      debugger
      fetch("http://localhost:7890/user", {
        method: "POST",
        body: JSON.stringify(data),
        headers: {
          "Content-Type": "application/json",
        },
      }).then((d) => d.json())
        .then((d) => {console.log("user registered successfully")})
        .catch((e) =>{ console.error(e)});
      return false;
    }
  </script>
</html>
